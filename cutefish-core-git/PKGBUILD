pkgname=cutefish-core-git
pkgver=0.8
pkgrel=1
pkgdesc="System components and backend of CutefishOS"
arch=('x86_64')
url="https://github.com/cutefishos/core"
license=('GPL')
groups=('cutefish')
depends=('fishui-git' 'libcutefish-git' 'libpulse' 'libxcursor' 'libxtst' 'polkit-qt5' 'qt5-quickcontrols2' 
         'xf86-input-libinput' 'xf86-input-synaptics')
makedepends=('extra-cmake-modules' 'ninja' 'qt5-tools' 'xorg-server-devel git')
source=("git+$url.git")
sha512sums=('SKIP')

pkgver() {
  cd core
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd core-$pkgver

  cmake -DCMAKE_INSTALL_PREFIX=/usr .
  make
}

package() {
  cd core-$pkgver
  make DESTDIR="$pkgdir" install
}
